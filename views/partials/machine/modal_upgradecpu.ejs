<div class="modal-dialog">

    <!-- Modal content-->
    <div id="cpuUpgradeRender" class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Upgrade CPU</h4>
        </div>
        <div id="cpuUpgradeContainer" class="modal-body">
            <div class="table-responsive">
                <table id="cpuUpgradeTable" class="table data-table">
                    <thead>
                    <tr>
                        <th>Cores</th>
                        <th>Speed (MHz)</th>
                        <th>Cost</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0 ; i < cpus.models.length ; i++){ %>
                    <tr>
                        <td><%- cpus.models[i].get('cores') %></td>
                        <td><%- cpus.models[i].get('speed') %></td>
                        <td><%- BH.sharedHelpers.cpuHelpers.getCPUCostDisplay(cpus.models[i].attributes) %></td>
                        <td class="text-center">
                            <% if(BH.sharedHelpers.cpuHelpers.getCPUModifier(cpus.models[i].attributes) < BH.sharedHelpers.cpuHelpers.getCPUModifier(model.get('machine').cpu)){ %>
                            <span class="text-warning text-owned">Downgrade</span>
                            <% } else if(cpus.models[i].get('_id') === model.get('machine').cpu._id){ %>
                            <span class="text-info text-owned">Owned</span>
                            <% } else { %>
                            <button type="button" class="btn btn-success buyButton"
                                    amount="<%- BH.sharedHelpers.cpuHelpers.getCPUCost(cpus.models[i].attributes) %>"
                                    _id="<%- cpus.models[i].get('_id') %>">
                                Buy
                            </button>
                            <% } %>
                        </td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>

    </div>

</div>